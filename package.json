{
  "name": "alis-editor",
  "version": "0.7.0",
  "author": "HANATANI Takuma <mail@potato4d.me>",
  "scripts": {
    "serve": "vue-cli-service serve src/entry.develop.ts",
    "build": "vue-cli-service build --target lib --name AlisEditor src/index.ts",
    "build:page": "vue-cli-service build src/entry.develop.ts",
    "dev": "yarn serve",
    "format": "prettier './{src,tests}/**/**.{ts,vue}' --write",
    "release": "bash release.sh",
    "test": "vue-cli-service test:unit --no-cache",
    "test:unit": "vue-cli-service test:unit",
    "release:prebuild": "yarn build",
    "release:postbuild": "git push --follow-tags origin master && npm publish",
    "release:major": "yarn release:prebuild; yarn standard-version --release-as major; yarn release:postbuild",
    "release:minor": "yarn release:prebuild; yarn standard-version --release-as minor; yarn release:postbuild",
    "release:patch": "yarn release:prebuild; yarn standard-version; yarn release:postbuild"
  },
  "dependencies": {
    "autolinker": "^1.7.1",
    "autosize": "^4.0.2",
    "axios": "^0.18.0",
    "lodash": "^4.17.10",
    "sanitize-html": "^1.18.3",
    "url-regex": "^4.1.1",
    "uuid": "^3.3.2",
    "vue": "^2.5.16",
    "vue-fixed-header": "^2.0.0"
  },
  "devDependencies": {
    "@types/autolinker": "^0.24.28",
    "@types/autosize": "^3.0.6",
    "@types/jest": "^23.3.7",
    "@types/lodash": "^4.14.111",
    "@types/sanitize-html": "^1.18.0",
    "@types/url-regex": "^4.1.0",
    "@types/uuid": "^3.4.3",
    "@vue/cli": "^3.0.3",
    "@vue/cli-plugin-babel": "^3.0.0",
    "@vue/cli-plugin-typescript": "^3.0.0",
    "@vue/cli-plugin-unit-jest": "^3.0.3",
    "@vue/cli-service": "^3.0.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "prettier": "^1.15.1",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.0.0",
    "typescript": "^3.0.0",
    "vue-template-compiler": "^2.5.17"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false
  },
  "main": "dist/AlisEditor.common.js",
  "repository": "ssh://git@github.com/AlisProject/alis-editor.git"
}
