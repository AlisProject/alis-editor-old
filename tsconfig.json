{
  "compilerOptions": {
    "outDir": "./built/",
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"]
  },
  "include": [
    "./src/**/*"
  ]
}
